@model TelaDeLogin.Models.Procurar
@*@model TelaDeLogin.Models.Giphy*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <title>Imagem</title>
</head>
<body style="background:black;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Giphy</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Início <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Favoritos</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" method="post" asp-controller="giphy" asp-action="Procurar">
                <input class="form-control mr-sm-2" type="search" placeholder="Procurar" aria-label="Search" asp-for="Giphy.Descricao">
                <input class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-controller="giphy" asp-action="Procurar" value="Procurar" />
            </form>
        </div>
    </nav>

    <div class="container">
        <h1>Giphy</h1>
        <div class="container">
            @foreach (var row in Model.RetornoApiGiphy.Data)
            {
                <div style="display:inline-block;">
                    <div>
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@row.Images.Original.Url" alt="Card image cap" asp-for="@row.Images.Original.Url">
                            <div class="card-body">
                                <a asp-controller="giphy" asp-action="favorito"><i class="far fa-star"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


</body>
</html>
